<BorderPane id="root-layout" fx:id="rootLayout" prefHeight="700.0" prefWidth="920.0" stylesheets="@../css/global.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.MenuController">
   <top>
      <MenuBar id="menu-bar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#volverInicio" text="Inicio" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Editar">
            <items>
                  <MenuItem fx:id="menuCrear" mnemonicParsing="false" onAction="#crear" text="Crear">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="menuEditar" mnemonicParsing="false" onAction="#editar" text="Editar">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
              <MenuItem fx:id="menuBorrar" disable="true" mnemonicParsing="false" onAction="#borrar" text="Borrar">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="D" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Ver">
              <items>
                <MenuItem fx:id="menuVer" mnemonicParsing="false" onAction="#verUsuarios" text="Empleados">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#abrirTutorial" text="Tutorial" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <AnchorPane fx:id="inicio" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="285.0" layoutY="123.0" styleClass="h1" text="Bienvenido al sistema" />
            <ImageView id="logo" fx:id="logoDemtr" fitHeight="200.0" fitWidth="158.0" layoutX="390.0" layoutY="217.0">
               <image>
                  <Image url="@../../../../../resources/images/logo1.png" />
               </image>
            </ImageView>
            <Text layoutX="232.0" layoutY="473.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="h3" text="Para empezar a usar la aplicación puedes navegar por el menú situado en la parte superior de la ventana." textAlignment="CENTER" wrappingWidth="474.6796875" />
            <Hyperlink layoutX="798.0" layoutY="40.0" onAction="#irAyuda" styleClass="ayuda" text="Ayuda" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
