<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootLayout" prefHeight="700.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.MenuController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
              <MenuItem mnemonicParsing="false" text="Cerrar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Editar">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#crear" text="Crear" />
                  <MenuItem mnemonicParsing="false" onAction="#editar" text="Editar" />
              <MenuItem mnemonicParsing="false" text="Borrar" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Ver">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#verUsuarios" text="Usuarios" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" text="Tutorial" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
